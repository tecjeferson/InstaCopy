{
    "version": 1,
    "builds": [{
            "src": "./backend/src/index.js",
            "use": "@now/node-server"
        },
        {
            "src": "./frontend/src/index.js",
            "use": "@now/node-server"
        }

    ],

    "routes": [{
            "src": "/.*",
            "dest": ".frontend/src/routes.js"
        },
        {
            "src": "/.*",
            "dest": ".backend/src/routes.js"
        }

    ]
}